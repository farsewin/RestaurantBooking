<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="16dp"
    android:layout_marginTop="16dp"

    android:radius="12dp"
    android:elevation="6dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        >

        <!-- فيديو المطعم -->
        <VideoView
            android:id="@+id/restaurantVideo"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true" />

        <!-- اسم المطعم -->
        <TextView
            android:id="@+id/restaurantName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Restaurant Sphère"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:textColor="#000000"
            android:maxLines="1"
            android:ellipsize="end"/>

        <!-- موقع المطعم -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/locationIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_location_on"
                app:tint="#757575"
                android:contentDescription="Location Icon"/>

            <TextView
                android:id="@+id/restaurantLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paris, Rue La Boétie"
                android:textColor="#666666"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>

        <!-- تقييم المطعم -->
        <RatingBar
            android:id="@+id/restaurantRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="4.5"
            android:stepSize="0.5"
            android:isIndicator="true"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:progressTint="#FF9800"/>

        <!-- زر الحجز -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/bookButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Reserve a Table Now"
            android:icon="@drawable/ic_reserve"
            app:iconGravity="textStart"
            android:textAllCaps="false"
            app:backgroundTint="#FF9800"
            app:cornerRadius="8dp"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"/>

        <!-- وصف المطعم -->
        <TextView
            android:id="@+id/restaurantDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A fine-dining restaurant offering a blend of international flavors and a charming French atmosphere. Ideal for quiet evenings and fine dining lovers."
            android:textColor="#444444"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"/>

        <!-- عروض المناسبات -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🎉 Special Offers"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- عرض رأس السنة -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="#FFF3E0"
                android:layout_marginBottom="4dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_fireworks"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="New Year's Eve Special: 20% off + live music!"
                    android:textColor="#BF360C"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- عرض عيد الحب -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="#FCE4EC"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_heart"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Valentine's Day Dinner: Romantic setup and free dessert!"
                    android:textColor="#880E4F"
                    android:textSize="14sp"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
